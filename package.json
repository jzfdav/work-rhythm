{
	"name": "work-rhythm",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"test": "vitest",
		"test:e2e": "playwright test",
		"check": "biome check --write .",
		"lint": "biome check .",
		"typecheck": "tsc -b",
		"format": "biome format . --write",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,d.ts,tsx,jsx,json,css}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"framer-motion": "^12.23.26",
		"lucide-react": "^0.562.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@playwright/test": "^1.57.0",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"biome": "^0.3.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"playwright": "^1.57.0",
		"typescript": "~5.9.3",
		"vite": "^7.2.4",
		"vite-plugin-pwa": "^1.2.0",
		"vitest": "^4.0.16"
	}
}